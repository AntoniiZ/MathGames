<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundColor"
    tools:context="mathgames.example.com.mathgames.QuizActivity">

    <TextView
        android:id="@+id/quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:text="@string/question"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/questionDesc"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quiz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:text="1. What is the result of the expression : 20 + 43 = ?"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/questionFirstOpt"
        android:layout_width="125sp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/questionDesc"
        android:layout_below="@+id/questionDesc"
        android:layout_marginTop="61dp"
        android:onClick="onClickFirstOpt"
        android:background="@drawable/round_btn"
        android:text="X" />

    <Button
        android:id="@+id/questionSecondOpt"
        android:layout_width="125sp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/questionDesc"
        android:layout_alignTop="@+id/questionFirstOpt"
        android:onClick="onClickSecondOpt"
        android:background="@drawable/round_btn"
        android:text="X" />

    <Button
        android:id="@+id/questionThirdOpt"
        android:layout_width="125sp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/questionFirstOpt"
        android:layout_below="@+id/questionFirstOpt"
        android:layout_marginTop="66dp"
        android:onClick="onClickThirdOpt"
        android:background="@drawable/round_btn"
        android:text="X" />

    <Button
        android:id="@+id/questionFourthOpt"
        android:layout_width="125sp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/questionThirdOpt"
        android:layout_alignBottom="@+id/questionThirdOpt"
        android:layout_alignEnd="@+id/questionDesc"
        android:onClick="onClickFourthOpt"
        android:background="@drawable/round_btn"
        android:text="X" />

</RelativeLayout>
